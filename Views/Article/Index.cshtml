@model IEnumerable<Rocky.Models.Article>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
<h2 class="text-primary">Article list</h2>
        </div>
        <div class="col-6  text-end">
            <a class="btn btn-primary" asp-controller="Article" asp-action="Create" >
                <i class="fa-solid fa-plus"></i>&nbsp;
                Create new Article
            </a>
        </div>
    </div>
<br/><br/>
@if(Model.Count()>0){
    <table class = table table-bordered table-striped style="width: 100%;">
        <thead>
            <tr>
                <th>Article Title</th>
                <th>Text</th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model){
                <tr>
                    <td width:"50%">@obj.Title</td>
                    <td width:"30%">@obj.Text</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Article" asp-route-ID="@obj.Id" asp-action="Edit" >
                               <i class="fa-regular fa-pen-to-square"></i> 
                            </a>
                            <a class="btn btn-danger mx-2" asp-controller="Article" asp-route-ID="@obj.Id" asp-action="Delete" >
                               <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>No article exists.</p>
}
</div>